{
  "name": "mindmap-editor",
  "version": "0.1.0",
  "description": "Multi-user collaborative mindmap editor",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "author": "Taipm",
  "license": "MIT",
  "scripts": {
    "react-start": "cd src/react-app && npm start",
    "react-build": "cd src/react-app && npm run build",
    "electron-dev": "electron .",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "build": "npm run react-build && tsc -p tsconfig.electron.json",
    "dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "typescript": "^5.3.0",
    "wait-on": "^7.0.0"
  }
}
